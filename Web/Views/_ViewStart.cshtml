@using CodeEndeavors.Extensions;
@using Videre.Core.Extensions;
@using Videre.Core.Services;

@{

    Html.RegisterWebReferenceGroup("videre");
    Html.RegisterAntiForgeryVerificationToken();
    
    var template = ViewContext.ViewData.Model as Videre.Core.Models.PageTemplate;
    if (template != null)
    {
        Layout = UI.GetLayoutPath(template.LayoutName);
    }

    Html.RegisterTheme(template);
        
   
}
