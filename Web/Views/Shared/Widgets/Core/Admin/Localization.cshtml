@using System.Collections.Generic;
@using Videre.Core.Extensions;
@using CodeEndeavors.Extensions;
@using Models = Videre.Core.Models;
@using System.Web.Mvc.Html;
@using Videre.Core.Services;
@model Models.Widget

@{
    Html.RegisterDataTableScript();
    Html.RegisterTreeScript();
    Html.RegisterControlPresenter(Model, "videre.widgets.admin.localization");
}

<div id="@Model.GetId("Widget")">
    @{Html.RenderPartial("WidgetHeader", Model);}
    
    <fieldset>
        <legend class="videre section-header">@Model.GetText("WidgetTitle.Text", "Localization Administration")</legend>
        
        <p>@Html.Raw(Model.GetText("Instructions.Text", "Localization administration is where you can alter the text displayed throughout the portal. "))</p>

        <div class="container">
            <div class="row">
                <div class="span3">
                    <div class="btn-toolbar">
                        <div class="btn-group">
                            <a class="btn btn-small" id="@Model.GetId("btnNew")"><i class="icon-plus"></i> @Model.GetPortalText("NewEntry.Text", "New Entry")</a>
                            @Html.DropDownList(Model.GetId("ddlFilterType"), Enum.GetNames(typeof(Models.LocalizationType)).Select(t => new SelectListItem() { Value = ((int)t.ToType<Models.LocalizationType>()).ToString(), Text = t }), new { style = "width: 110px;" })
                        </div>
                    </div>
                    <div id="@Model.GetId("Tree")" style="overflow: auto; height: 500px; padding:0; margin:0;" class="span3"></div>
                </div>
                <div id="@Model.GetId("ItemListCtr")" class="span9">
                    <table class="table table-striped table-bordered table-condensed" id="@Model.GetId("ItemTable")">
                        <thead>
                            <tr>
                                <th style="width: 62px"></th>
                                <th style="width: 60px">@Model.GetPortalText("Locale.Text", "Locale")</th>
                                <th>@Model.GetText("Key.Text", "Key")</th>
                                <th>@Model.GetText("Text.Text", "Text")</th>
                            </tr>
                        </thead>
                        <tbody id="@Model.GetId("ItemList")"></tbody>
                    </table>
                    <script id="@Model.GetId("ItemListTemplate")" type="text/html">
                        <tr>
                            <td>
                                <a class="btn btn-mini" data-id="{{:Id}}" data-action="edit"><i class="icon-pencil"></i></a>
                                <a class="btn btn-mini" data-id="{{:Id}}" data-action="delete"><i class="icon-trash"></i></a>
                            </td>
                            <td>{{:Locale}}</td>
                            <td><span title="{{:treeKey}}">{{:Key}}</span></td>
                            <td>{{:Text}}</td>
                        </tr>
                    </script>
                </div>
                <div id="@Model.GetId("Dialog")" data-target="#@Model.GetId("Dialog")" class="modal fade" style="width: 700px;">
                    <div class="modal-header">
                        <a class="close" data-dismiss="modal">×</a>
                        @Model.GetText("EditDialogText.Text", "Localization Edit")
                    </div>
                    <div class="modal-body">
                        @{Html.RenderPartial("WidgetHeader", Model);}
                        <div class="form-horizontal">
                            @Html.DropDownControlGroup(Model, "ddlPortal", "Portal.Text", "Portal", "PortalId", Videre.Core.Services.Portal.GetPortals().Select(p => new SelectListItem() { Value = p.Id, Text = p.Name }))
                            @Html.DropDownControlGroup(Model, "ddlType", "Type.Text", "Type", "Type", Enum.GetNames(typeof(Models.LocalizationType)).Select(t => new SelectListItem() { Value = ((int)t.ToType<Models.LocalizationType>()).ToString(), Text = t }))
                            @Html.InputControlGroup(Model, "txtLocale", "Locale.Text", "Locale", "Locale", "span2")
                            @Html.InputControlGroup(Model, "txtNamespace", "Namespace.Text", "Namespace", "Namespace", "span5")
                            @Html.InputControlGroup(Model, "txtKey", "Key.Text", "Key", "Key")
                            @Html.TextAreaControlGroup(Model, "txtText", "Text.Text", "Text", "Text", inputCss: "span5")
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-primary" id="@Model.GetId("btnSave")">@Model.GetPortalText("Save.Text", "Save")</a>
                        <a class="btn" data-dismiss="modal">@Model.GetPortalText("Cancel.Text", "Cancel")</a>
                    </div>
                </div>

            </div>
        </div>
    </fieldset>
</div>

