@using System.Collections.Generic;
@using Videre.Core.Extensions;
@using Models = Videre.Core.Models;
@using System.Web.Mvc.Html;
@using Videre.Core.Services;
@model Models.TextEditor

@{
    
    Html.RegisterScript(Model.ScriptPath + "ckeditor_3.6.4/ckeditor.js", true);
    Html.RegisterScript(Model.ScriptPath + "ckeditor_3.6.4/adapters/jquery.js", true);
    Html.RegisterControlPresenter(Model, "videre.controls.texteditor.ck");

}
<textarea id="@Model.ClientId" data-column="@Model.DataColumn" data-required="@Model.Required.ToString().ToLower()" data-label-text="@Model.LabelText"></textarea>
