@using Videre.Core.Extensions
@using Bootstrap = Videre.Core.Extensions.Bootstrap;

@model Videre.Core.Models.Widget

@{
}

<div id="@Model.GetId("Widget")" class="@Model.Css" style="@Model.Style">
    <div class="container">
        <div class="row">
            <div class="span12">
                @{ Html.RenderPartial("WidgetHeader", Model); }
    
                    @(Html.Bootstrap().Tabs(new List<Bootstrap.Controls.BootstrapTab>() 
                    { 
                        new Bootstrap.Controls.BootstrapTab() { Id = @Model.GetId("RoleTab"), Text = @Model.GetText("Roles.Text", "Roles"), Active = true, Icon = "glyphicon glyphicon-list-alt" },
                        new Bootstrap.Controls.BootstrapTab() { Id = @Model.GetId("SecureActivityTab"), Text = @Model.GetText("SecureActivity.Text", "Secure Activity"), Icon = "glyphicon glyphicon-upload" }
                    }))

                <div class="tab-content">
                    <div class="tab-pane active" id="@Model.GetId("RoleTab")">
                        <div class="container">
                        @{ Html.RenderWidget("Core/Admin/Role"); }
                        </div>
                    </div>
                    <div class="tab-pane" id="@Model.GetId("SecureActivityTab")">
                        <div class="container">
                        @{ Html.RenderWidget("Core/Admin/SecureActivity"); }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

