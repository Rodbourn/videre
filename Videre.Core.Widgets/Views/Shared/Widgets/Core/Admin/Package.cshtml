@using System.Collections.Generic;
@using Videre.Core.Extensions;
@using Models = Videre.Core.Models;
@using System.Web.Mvc.Html;
@using Videre.Core.Services;
@using Bootstrap = Videre.Core.Extensions.Bootstrap;
@model Models.Widget

@{
}

<div id="@Model.GetId("Widget")" class="@Model.Css" style="@Model.Style">
    @{ Html.RenderPartial("WidgetHeader", Model); }

    @(Html.Bootstrap().Tabs(new List<Bootstrap.Controls.BootstrapTab>() 
    { 
        new Bootstrap.Controls.BootstrapTab() { Id = @Model.GetId("AdminTab"), Text = @Model.GetText("Administration.Text", "Administration"), Active = true, Icon = "glyphicon glyphicon-gift" },
        new Bootstrap.Controls.BootstrapTab() { Id = @Model.GetId("ExportJobTab"), Text = @Model.GetText("ExportJob.Text", "Export Job"), Icon = "glyphicon glyphicon-flash" },
        new Bootstrap.Controls.BootstrapTab() { Id = @Model.GetId("ExportTab"), Text = @Model.GetText("CustomExport.Text", "Custom Export"), Icon = "glyphicon glyphicon-export" }
    }))

    <div class="tab-content">
        <div class="tab-pane active" id="@Model.GetId("AdminTab")">
            @{ Html.RenderSubWidget(Model, "PackageAdmin", new { }, true); }
        </div>
        <div class="tab-pane" id="@Model.GetId("ExportJobTab")">
            @{Html.RenderSubWidget(Model, "PackageExportJob", new { }, true);}
        </div>
        <div class="tab-pane" id="@Model.GetId("ExportTab")">
            @{ Html.RenderSubWidget(Model, "PackageExport", new { }, true); }
        </div>
    </div>
</div>
